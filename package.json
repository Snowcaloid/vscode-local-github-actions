{
  "name": "local-github-actions",
  "displayName": "Local Github Actions",
  "description": "Support for local files in Github Actions / Workflows",
  "publisher": "Snowcaloid",
  "homepage": "https://www.github.com/Snowcaloid",
  "license": "SEE LICENSE IN LICENSE (GNU)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "icon": "assets/local-github-actions.png",
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:**/.github/workflows/*.{yml,yaml}",
    "workspaceContains:**/.github/actions/*.{yml,yaml}"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Local Github Actions configuration",
      "properties": {
        "local-github-actions.file-exist-errors": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable file not found diagnostics for local 'uses' references"
        },
        "local-github-actions.file-placement-errors": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable file placement diagnostics for local 'uses' references that point to potentially wrong files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  }
}
